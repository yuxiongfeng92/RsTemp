<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="StyleRetry">
        <item name="android:id">@id/retry_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/drawable_retry_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6E7175</item>
        <item name="android:text">@string/string_click_refresh</item>
    </style>

    <style name="AppSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/space_icon</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="EditStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/drawable_edit_bg</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditStyle2">
        <item name="android:layout_width">295dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/drawable_edit_bg</item>
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyBtnStyle" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:stateListAnimator">@animator/selector_animator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--单选按钮样式-->
    <style name="style_rb_managecenter">
