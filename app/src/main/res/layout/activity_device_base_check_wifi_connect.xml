<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  tools:context="com.proton.runbear.activity.device.DeviceBaseCheckWifiConnectActivity">

        <include
            android:id="@+id/id_include_top"
            layout="@layout/include_top_navigation"/>

        <TextView
            style="@style/style_26sp_blue30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/string_please_connectWifi"/>

        <TextView
            android:id="@+id/id_tips"
            style="@style/style_16sp_gray33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"/>

        <TextView
            style="@style/style_12sp_gray33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/shape_oval_blue1f"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/string_base_wifiConnctTip2"/>

        <ImageView
            android:layout_width="253dp"
            android:layout_height="426dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/img_wificonnect_pic"/>
    </LinearLayout>
</layout>