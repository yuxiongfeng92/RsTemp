<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_10dp_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_top_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/main_round_10_topbg"
            android:gravity="center"
            android:text="@string/string_warm_tips"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_content"
            style="@style/style_14sp_gray33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_top_text" />

        <View
            android:id="@+id/id_first_divider"
            style="@style/DividerStyle"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_content" />


        <TextView
            android:id="@+id/id_confirm_text"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:background="@drawable/white_round_10dp_bottombg"
            android:gravity="center"
            android:text="@string/string_confirm"
            android:textColor="#777777"
            android:textSize="@dimen/ps16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/id_cancel_text"
            app:layout_constraintTop_toBottomOf="@+id/id_first_divider" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/color_gray_line"
            app:layout_constraintLeft_toRightOf="@+id/id_confirm_text"
            app:layout_constraintRight_toLeftOf="@+id/id_cancel_text"
            app:layout_constraintTop_toTopOf="@+id/id_confirm_text"
            app:layout_constraintBottom_toBottomOf="@+id/id_confirm_text"
            />

        <TextView
            android:id="@+id/id_cancel_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/white_round_10dp_bottombg"
            android:gravity="center"
            android:text="@string/string_cancel"
            android:textColor="@color/color_main"
            android:textSize="@dimen/ps16"
            app:layout_constraintLeft_toRightOf="@+id/id_confirm_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_first_divider" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>