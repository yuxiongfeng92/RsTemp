<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_round_10dp_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/id_top_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_round_10_topbg"
        android:gravity="center"
        android:text="@string/string_warm_tips"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/id_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="49dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        style="@style/style_16sp_gray33"
        />

    <View
        android:id="@+id/id_first_divider"
        style="@style/DividerStyle"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/id_first_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#30b8ff"
        android:textSize="5sp"
        android:visibility="gone"/>

    <View
        style="@style/DividerStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_confirm_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_confirm"
            android:textColor="#30b8ff"
            android:textSize="16sp"/>

        <View
            android:id="@+id/id_second_divider"
            style="@style/DividerStyle"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/id_cancel_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string_cancel"
            android:textColor="#30b8ff"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>