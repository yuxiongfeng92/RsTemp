<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/id_include_top"
            layout="@layout/include_top_navigation" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--名称、型号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@color/white"
                    android:divider="@drawable/divider_item_layout_1dp"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingRight="17dp"
                    android:showDividers="middle">
                    <!--名称-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体温贴:" />

                        <TextView
                            android:id="@+id/id_mac"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>
                </LinearLayout>
                <!--充电器详细内容-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:divider="@drawable/divider_item_layout_1dp"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="18dp"
                    android:showDividers="middle">
                    <!--最近使用-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绑定手机:" />

                        <TextView
                            android:id="@+id/id_bind_phone"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绑定日期:" />

                        <TextView
                            android:id="@+id/id_bind_date"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end"
                            android:text="--" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绑定天数:" />

                        <TextView
                            android:id="@+id/id_bind_days"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>
                    <!--固件版本-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出库类型" />

                        <TextView
                            android:id="@+id/id_out_type"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绑定状态:" />

                        <TextView
                            android:id="@+id/id_bind_status"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_15sp_gray33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出库机构" />

                        <TextView
                            android:id="@+id/id_iow_org"
                            style="@style/style_15sp_grayb3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="--" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>