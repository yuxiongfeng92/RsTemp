<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_bar_height"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_alarm_name"
        style="@style/style_14sp_gray33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pd15"
        android:text="铃声" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pd15"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/icon_profile_submit" />

</RelativeLayout>